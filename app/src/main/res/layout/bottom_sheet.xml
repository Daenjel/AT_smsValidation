<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottomLayout"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/confirmLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/confirm"
        android:text="Please confirm that the Number below is correct"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/num"
        android:layout_below="@id/confirm"
        android:text="Number: "
        android:textStyle="normal"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/display"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/num"
        android:layout_toEndOf="@id/num"
        android:layout_below="@id/confirm"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnChange"
        android:layout_gravity="center_horizontal"
        android:text="Change"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:background="#0B7441"/>
    <Button
        android:id="@+id/btnOkay"
        android:layout_gravity="center_horizontal"
        android:text="Ok"
        android:layout_toRightOf="@id/btnChange"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:background="#0B7441"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/verifyLay"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bool"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="30sp"
            android:layout_above="@id/card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Verification Code:" />

        <LinearLayout
            android:id="@+id/card"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <EditText
                android:id="@+id/fF"
                android:layout_width="wrap_content"
                android:textSize="50sp"
                android:inputType="number"
                android:hint="@string/hint"
                android:maxLength="4"
                android:layout_marginLeft="@dimen/dis"
                android:layout_marginStart="@dimen/dis"
                android:textColor="@android:color/black"
                android:background="@drawable/my_border"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_below="@id/card"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#03A9F4"
            android:layout_gravity="center_horizontal|center_vertical"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnVal"
                android:text="Validate"
                android:background="@android:color/transparent"
                android:textStyle="normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>